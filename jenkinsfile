pipeline {
    agent any

    stages {
        stage("Cloner le projet") {
            steps {
                git branch: 'main', url: 'git@github.com/nidhal19615/CrudJenkins.git', credentialsId: 'ssh-master'
            }
        }

        stage("Compilation") {
            steps {
                sh "./mvnw clean install -DskipTests"
            }
        }

        stage("Tests et Déploiement") {
            stage("Exécution des tests unitaires") {
                steps {
                    sh "./mvnw test -Punit"
                }
            }
            stage("Déploiement") {
                steps {
                    sh 'nohup ./mvnw spring-boot:run -Dserver.port=8001 &'
                }
            }
        }
    }
}
