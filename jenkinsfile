pipeline {
    agent any
    stages {
        stage("Clone the project") {
            steps {
                script {
                    git branch: 'main', url: 'git@github.com:nidhal19615/CrudJenkins.git', credentialsId: 'ssh-master'
                }
            }
        }
        
        stage("Compilation") {
            steps {
                sh "./mvnw clean install -DskipTests"
            }
        }
        
        stage("Tests and Deployment") {
            stage("Running unit tests") {
                steps {
                    sh "./mvnw test -Punit"
                }
            }
            stage("Deployment") {
                steps {
                    sh 'nohup ./mvnw spring-boot:run -Dserver.port=8001 &'
                }
            }
        }
    }
}