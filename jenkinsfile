pipeline {
    agent any
    stages {
        stage("Clone") {
            steps {
                script {
                    git branch: 'main', credentialsId: 'ssh', url: 'git@github.com:nidhal19615/CrudJenkins.git'
                }
            }
        }
      
      

        stage("Build and Push Docker Image") {
            agent any
             steps {
             sh 'docker build -t nidhal2/dev-image .'
                  }
         }
           
            }
    }

    

